@page "/login"
@layout EmptyLayout


<div class="content d-flex justify-content-center align-items-center">

    <EditForm Model="@_modelForm" OnValidSubmit="@Submit" class="login-form">
        <FluentValidationValidator />
        <div class="card mb-0">
            <div class="card-body">
                <div class="text-center mb-3">
					<i class="icon-reading icon-2x text-secondary border-secondary border-3 rounded-pill p-3 mb-3 mt-1"></i>
					<h5 class="mb-0">Login</h5>
					<span class="d-block text-muted">Masukan Email & Password</span>
				</div>

				<div class="form-group form-group-feedback form-group-feedback-left">
					<InputText @bind-Value="@_modelForm.Email" class="form-control" placeholder="Email" />
					<div class="form-control-feedback">
						<i class="icon-user text-muted"></i>
					</div>
					 <ValidationMessage For="@(() => _modelForm.Email)" />
				</div>

				<div class="form-group form-group-feedback form-group-feedback-left">
					<InputText @bind-Value="@_modelForm.Password" type="password" class="form-control" placeholder="Password" />
					<div class="form-control-feedback">
						<i class="icon-lock2 text-muted"></i>
					</div>
					 <ValidationMessage For="@(() => _modelForm.Password)" />
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary btn-block">Sign in</button>
				</div>

				<div class="text-center">
					<a href="login_password_recover.html">Forgot password?</a>
				</div>
            </div>
        </div>
    </EditForm>
</div>