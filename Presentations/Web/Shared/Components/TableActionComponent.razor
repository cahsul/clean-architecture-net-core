<ActionColumn>
	<Space>

		@if (OnClickDelete != null)
		{
			<SpaceItem>
				<Tooltip Title=@("Delete")>
					<Button OnClick="HandleOnClickDelete" Loading=_onClickDeleteLoading
							Danger Type="@ButtonType.Primary" Shape="round" Icon="@IconType.TwoTone.Delete" Size="@ButtonSize.Small" />
				</Tooltip>
			</SpaceItem>
		}

		@if (OnClickEdit.HasDelegate)
		{
			<SpaceItem>
				<Tooltip Title=@("Edit.")>
					<Button Shape="round" Icon="@IconType.TwoTone.Edit" OnClick="HandleOnClickEdit" Size="@ButtonSize.Small" />
				</Tooltip>
			</SpaceItem>
		}






	</Space>
</ActionColumn>